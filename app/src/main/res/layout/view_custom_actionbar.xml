<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ViewAnimator
        android:id="@+id/menu_animator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height2"
        android:background="@color/actionbar_color">

        <RelativeLayout
            android:id="@+id/toolbar_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_height2">

            <LinearLayout
                android:id="@+id/menu_left_btn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp">

                <RelativeLayout
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center">

                    <ImageView
                        android:id="@+id/menu_icons"
                        android:layout_width="@dimen/navigation_icon_size"
                        android:layout_height="@dimen/navigation_icon_size"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="3dp"
                        android:padding="5dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_back" />

                    <TextView
                        android:id="@+id/menu_badge_layout"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="" />

                </RelativeLayout>
            </LinearLayout>

            <com.tutor93.tugasfrensky.view.TextViewRegular
                android:id="@+id/menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="marquee"
                android:gravity="top|center"
                android:maxLength="35"
                android:maxWidth="@dimen/navigation_spinner_width"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/menu"
                android:textColor="@color/dark_purple"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/medbook_nav_more_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="6dp">

                <com.tutor93.tugasfrensky.view.TextViewRegular
                    android:id="@+id/menu_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ellipsize="marquee"
                    android:gravity="top"
                    android:maxWidth="@dimen/navigation_spinner_width"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/select"
                    android:textColor="@color/dark_purple"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/menu_right_btn2"
                    android:layout_width="@dimen/navigation_icon_size"
                    android:layout_height="@dimen/navigation_icon_size"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ico_mail" />

                <ImageView
                    android:id="@+id/menu_right_btn"
                    android:layout_width="@dimen/navigation_icon_size"
                    android:layout_height="@dimen/navigation_icon_size"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ico_pdf" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_height2">

            <LinearLayout
                android:id="@+id/menu_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:padding="5dp">

                <com.tutor93.tugasfrensky.view.TextViewRegular
                    android:id="@+id/menu_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="8dp"
                    android:ellipsize="marquee"
                    android:maxWidth="@dimen/navigation_spinner_width"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/navigation_cancel"
                    android:textColor="@color/dark_purple"
                    android:textSize="18sp" />
            </LinearLayout>

            <com.tutor93.tugasfrensky.view.TextViewRegular
                android:id="@+id/menu_selected_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="marquee"
                android:gravity="top"
                android:maxWidth="@dimen/navigation_spinner_width"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/medbooks"
                android:textColor="@color/dark_purple"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menu_select_share"
                    android:layout_width="@dimen/navigation_icon_size"
                    android:layout_height="@dimen/navigation_icon_size"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_done" />

                <ImageView
                    android:id="@+id/menu_select_delete"
                    android:layout_width="@dimen/navigation_icon_size"
                    android:layout_height="@dimen/navigation_icon_size"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_delete" />
            </LinearLayout>


        </RelativeLayout>


    </ViewAnimator>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator_color" />

</LinearLayout>
