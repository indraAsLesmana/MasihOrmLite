<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup_page_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/medbooks_45dp"
            android:background="@color/white"
            android:clickable="true">

            <com.tutor93.tugasfrensky.view.TextViewRegular
                android:id="@+id/txvw_header_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="@dimen/medbooks_5dp"
                android:text="@string/latihan_api"
                android:textColor="@color/news_purple"
                android:textSize="@dimen/font_20sp" />

            <LinearLayout
                android:id="@+id/imbn_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/medbooks_60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/medbooks_10dp"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/medbooks_20dp"
                    android:layout_height="@dimen/medbooks_20dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/medbooks_12dp"
                    android:background="@color/transparent"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_back" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/medbooks_1dp"
            android:background="@color/separator_list_elemen_gray"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/medbooks_1dp"
            android:background="@color/transparent"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:fadeScrollbars="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/medbooks_10dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/iduser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="@string/id" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/company_txlatihanapi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/company_name" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/address_txlatihanapi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Address" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/request_txlatihanapi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/request" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/contactname_txlatihanapi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contact_name" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/contactnumber_txlatihanapi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contact_number" />


            <com.tutor93.tugasfrensky.view.ButtonRegular
                android:id="@+id/save_api"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/medbooks_30dp"
                android:layout_marginRight="@dimen/medbooks_30dp"
                android:layout_marginTop="@dimen/medbooks_25dp"
                android:background="@drawable/selector_btn_green_rounded"
                android:gravity="center"
                android:paddingBottom="@dimen/medbooks_10dp"
                android:paddingTop="@dimen/medbooks_10dp"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14sp" />

            <com.tutor93.tugasfrensky.view.ButtonRegular
                android:id="@+id/add_new_api"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/medbooks_30dp"
                android:layout_marginRight="@dimen/medbooks_30dp"
                android:layout_marginTop="@dimen/medbooks_25dp"
                android:background="@drawable/selector_btn_green_rounded"
                android:gravity="center"
                android:paddingBottom="@dimen/medbooks_10dp"
                android:paddingTop="@dimen/medbooks_10dp"
                android:text="@string/add_new"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14sp" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>